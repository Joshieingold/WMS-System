<Window x:Class="WMS_System.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WMS_System"
        mc:Ignorable="d"
        Title="AdminWindow" Height="450" Width="800" Background="Black" Foreground="#FF20BD00">
    <Grid >
        <Grid Margin="0,174,0,0" HorizontalAlignment="Center" Width="200" Height="86" VerticalAlignment="Top">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF7DFF00" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Label Content="Add Device Type" Foreground="#FF00FF33" HorizontalAlignment="Center" Width="98" Height="27" VerticalAlignment="Top"/>
            <TextBox x:Name="add_device_type_textbox" Background="#FF0F3300" Margin="0,31,0,0" Height="19" VerticalAlignment="Top" HorizontalAlignment="Center" Width="116" BorderBrush="#FF081500" Foreground="#FF2FDE00"></TextBox>
            <Button x:Name="add_device_type_button" Content="Add" Margin="0,55,0,0" Click="Button_Click" Background="#FF0F3300" BorderBrush="#FF081500" Foreground="#FF2FDE00" Height="20" VerticalAlignment="Top" HorizontalAlignment="Center" Width="116"/>
        </Grid>

    </Grid>
</Window>
