<UserControl x:Class="WMS_System.Components.SerialEntryUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WMS_System.Components"
             mc:Ignorable="d" 
             >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <TextBox Grid.Column="0" x:Name="SerialTextBox" Margin="4"/>
        <TextBox Grid.Column="1" x:Name="DeviceNameTextBox" Margin="4"/>
        <TextBox Grid.Column="2" x:Name="LocatorTextBox" Margin="4"/>
        <Button Content="X" Grid.Column="3" x:Name="RemoveButton" Width="20" Height="20" Click="RemoveButton_Click"/>

    </Grid>
</UserControl>
